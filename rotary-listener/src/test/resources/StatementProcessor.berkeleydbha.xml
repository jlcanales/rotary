<?xml version="1.0" encoding="UTF-8"?><!-- 	Default EsperHA configuration file.		The configuration file specifies BerkeleyDB for the underlying store.	We recommend starting with an empty configuration file and adding those settings found relevant for your project and testing settings as new settings are introduced.	Use the sample configuration file "esperha.sample.cfg.xml" for examples of most configuration options available.	The file "esperha-configuration-4-0.xsd" is the schema file for this XML and may be used to validate this configuration file.	Please refer to the Configuration section of the documentation for more information.--><esperha-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.espertech.com/schema/esperha http://www.espertech.com/schema/esper/esperha-configuration-5-0.xsd">	<!--     Alternatively use the following external schema:   xsi:schemaLocation="http://www.espertech.com/schema/esperha http://www.espertech.com/schema/esper/esperha-configuration-4-0.xsd"> -->	<statement-mappings>		<statement-mapping>			<statement-name>transient*</statement-name>			<scheme-name>transient-scheme</scheme-name>		</statement-mapping>		<statement-mapping>			<statement-name>durable*</statement-name>			<scheme-name>durable-scheme</scheme-name>		</statement-mapping>		<statement-mapping>			<statement-name>overflow*</statement-name>			<scheme-name>overflow-scheme</scheme-name>		</statement-mapping>		<statement-mapping>			<statement-name>resilient*</statement-name>			<scheme-name>resilient-scheme</scheme-name>		</statement-mapping>		<statement-mapping>			<statement-name>*</statement-name>			<scheme-name>transient-scheme</scheme-name>		</statement-mapping>	</statement-mappings>	<scheme-profiles>		<scheme-profile>			<scheme-name>transient-scheme</scheme-name>			<transient-profile/>		</scheme-profile>		<scheme-profile>			<scheme-name>durable-scheme</scheme-name>			<durable-profile>				<store name="esperha-default-store"/>			</durable-profile>		</scheme-profile>		<scheme-profile>			<scheme-name>overflow-scheme</scheme-name>			<overflow-profile>				<store name="esperha-default-store"/>			</overflow-profile>		</scheme-profile>		<scheme-profile>			<scheme-name>resilient-scheme</scheme-name>			<resilient-profile>				<store name="esperha-default-store"/>			</resilient-profile>		</scheme-profile>	</scheme-profiles>	<store-environments>		<store-env-bdbje name="esperha-default-store"/>	</store-environments></esperha-configuration>